<div class="bg-white p-3 header-secondary row">
    <div class="col">
        <div class="d-flex">
        </div>
    </div>
</div>
<!-- page-header -->
<div class="page-header">
    <ol class="breadcrumb">
        <!-- breadcrumb -->
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Order</li>
    </ol><!-- End breadcrumb -->
</div>
<!-- End page-header -->

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">

        <div class="card shadow">
            <div class="card-header">
                <h3 class="mb-0 card-title">File upload</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Upload", "Photo", new { id = ViewBag.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="file" multiple name="fileUpload" />
                    <input type="submit" class="btn btn-primary" value="Send" />
                }

            </div>
        </div>
        <div class="card shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="card-title mb-0">Images Option</h3>
            </div>
            <div class="">
                <div class="grid-margin">
                    <div class="">
                        <div class="table-responsive">
                            <table class="table card-table table-vcenter text-nowrap  align-items-center">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Id</th>
                                        <th>Image</th>
                                        <th>Tour</th>
                                        <th>IsAvatar</th>
                                        <th>SortOrder</th>
                                        <th>Public</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                <img src="~/images/uploads/@item.PathPhoto" width="150"/>
                                            </td>
                                            <td>@item.Tour.Title</td>
                                            <td>@item.IsAvatar</td>
                                            <td>@item.SortOrder</td>
                                            <td>@item.Publish</td>
                                            <td>
                                                <a href="@Url.Action("Edit",new { id = item.Id })">Edit</a>
                                                <a href="@Url.Action("Delete",new { id = item.Id })">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
